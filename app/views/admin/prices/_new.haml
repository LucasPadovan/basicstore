.modal
  = simple_form_for ['admin', @product, @price], html: { remote: true, class: 'form-horizontal',
    data: { target: 'product_price', modal: true, error: 'modal', replace: true } } do |f|
    .modal-header
      %h3= @title
    .modal-body
      = render partial: 'form', locals: { f: f }
    .modal-footer
      = f.submit t('admin.prices.new.submit'), disable_with: t('admin.prices.new.submiting'), class: 'btn btn-primary stitched btn-large'
      = yield :form_actions