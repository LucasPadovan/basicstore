<div id="carrito">
  <% if @cart %>
    <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
      <div class="cart_title"><%= t('.title') %></div>
      <table>
        <%= render(cart.line_items) %>
        <!--<tr class="total_line">-->
        <!--<td colspan="2"><%#= t('.total') %></td>-->
        <!--<td class="total_cell"><%#= number_to_currency(cart.total_price) %></td>-->
        <!--</tr>-->
      </table>
      <%= link_to t('.buy'), new_order_path, class: 'pure-button pure-button-success' %>
      <%= link_to t('.emptycart'), cart, method: :delete, confirm: t('.confirm'), class: 'pure-button pure-button-error' %>
    <% end %>
  <% end %>
</div>