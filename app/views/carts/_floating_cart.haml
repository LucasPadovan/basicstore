.floating-cart{ data: { element: 'floating-cart' } }
  .cart
    %h3 Su carrito
    %hr
    %table.table
      %thead
        %tr
          %th Item
          %th
      %tbody#floating-cart-body
        = render partial: 'line_items/floating_line_item', collection: @cart.line_items
        %tr
          %td Total:
          %td
            %b= number_to_currency @cart.total_price
    = link_to t('carts.cart.buy'), new_order_path, class: 'btn btn-primary btn-large', remote: true, data: { target: 'modal', modal: true }
    = link_to t('carts.cart.emptycart'), @cart, method: :delete, confirm: t('carts.cart.confirm'), class: 'btn btn-danger btn-small'
  .cart-tab{ data: { action: 'toggle-cart', toggle: 'tooltip' }, title: 'Abrir el carrito' }
    .icon.icon-shopping-cart.big-icon
