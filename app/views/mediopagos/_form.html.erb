<%= form_for(@mediopago) do |f| %>
  <% if @mediopago.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count=>@mediopago.errors.size, :model=>t('activerecord.models.mediopago')) %>.</h2>
      <p><%= t('errors.template.body') %></p>

      <ul>
      <% @mediopago.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre, t('.name') %><br />
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :descripcion, t('.desc') %><br />
    <%= f.text_field :descripcion %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit')%>
  </div>
<% end %>
