<div id="mediopagos_list"><h1><%= t('.title') %></h1>

<table class="table table-bordered table-striped">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.desc') %></th>
    <th></th>
  </tr>

<% @mediopagos.each do |mediopago| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="nombre"><%= mediopago.nombre %></td>
    <td><%= mediopago.descripcion %></td>
    
    <td class="list_actions">
      <%= link_to t('.show'), mediopago %><br />
      <%= link_to t('.edit'), edit_mediopago_path(mediopago) %><br />
      <%= link_to t('.destroy'), mediopago, :confirm => t('.confirm'), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new'), new_mediopago_path %>
</div>
