<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('errors.template.header', :count=>@product.errors.size, :model=>t('activerecord.models.product')) %>.</h2>
      <p><%= t('errors.template.body') %></p>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titulo, t('.title') %><br />
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :descripcion, t('.desc') %><br />
    <%= f.text_area :descripcion, :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label :image_url, t('.imgurl'), id:"imagen" %><br />
    <%= f.text_field :image_url, class:"caja_image_url" %>
  </div>

  <% if params[:action] == 'new' %>
    <%= fields_for @precioproducto do |cf| %>
      <div class="field">
        <%= cf.label :costo %><br />
        <%= cf.text_field :costo %>
      </div>
      <div class="field">
        <%= cf.label :preciopublico %><br />
        <%= cf.text_field :preciopublico %>
      </div>
    <% end %>
  <% end %>

  <div class="field">
      <%= f.label :product_type, t('.productType') %><br />
      <%= f.select :product_type_id, ProductType.all.map{|r|[r.nombre,r.id]}, :prompt => t('.promptTP') %>
  </div>
  <div class="field">
    <%= f.label :cantidad, t('.cant') %> <br />
    <%= f.number_field :cantidad %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit')%>
  </div>
<% end %>
