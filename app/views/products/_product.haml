.product
  = link_to image_tag(product.image_url, class: 'product-image'), product
  %h3= link_to product.titulo , product
  = sanitize(product.descripcion)
  .price_line
    %span.price= number_to_currency(product.precio)
    = link_to t('.addToCart'), line_items_path(product_id: product),
      remote: true, method: :post, class: 'pure-button pure-button-primary'
