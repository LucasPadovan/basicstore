<%= content_tag :p, notice, id:'notice' if notice.present? %>
<%= image_tag(@product.image_url,:class => 'imagen') %>
<div class="datos">
  <p>
    <b><%= t('.name') %></b>
    <%= @product.titulo %>
  </p>

  <p>
    <b><%= t('.desc') %></b>
    <%= @product.descripcion %>
  </p>
  <% if @product.product_types.any? %>
    <p>
      <% @product.product_types.each do |pt| %>
        <span class="badge"><%= pt.name %></span>
      <% end %>
    </p>
  <% end %>
<% if session[:user_id] %>
  <p>
    <b><%= t('.imgurl') %></b>
    <%= @product.image_url %>
  </p>
  <p>
    <b>Cantidad: </b>
    <%= @product.cantidad %>
  </p>
  <p>
    <b>Costo: </b>
    <%= @product.precioproductos.last.costo %>
  </p>
  <p>
    <b>Precio al público: </b>
    <%= @product.actual_public_price %>
  </p>
<% else %>
    <%= button_to t('.addcart'),line_items_path(:product_id=>@product)%><br />
      <div id="links">
    <%= link_to t('.backstore'),store_index_path %><br /><br />
      </div>
<% end %>
<% if session[:user_id] %>
    <%= link_to 'Nuevo precio', precionuevo_path(@product) %> |
    <%= link_to t('.edit'), edit_product_path(@product) %> |
    <%= link_to 'Histórico de precios', precioproductos_path(:product => @product) %><br/><br/>
    <%= link_to t('.back'), products_path %>
<% end %>

</div>