= simple_form_for(@promotion) do |f|
  = f.error_notification

  .form-inputs
    = f.input :product_id
    = f.input :title
    = f.input :description
    = f.input :color_combo
    = f.input :flat_discount
    = f.input :percent_discount
    = f.input :start_date
    = f.input :end_date

  .form-actions
    = f.button :submit
