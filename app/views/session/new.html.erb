<div>
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend><%= t('.legend') %></legend>
      
      <div>
        <label for="name"><%= t('.name') %></label>
        <%= text_field_tag :name, params[:name] %>
      </div>
      <div>
        <label for="password"><%= t('.pass') %></label>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
