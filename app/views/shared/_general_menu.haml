= link_to '', '#menu', class: 'pure-u', id: 'menu_link'
#menu.pure-u-1-8
  .pure-menu.pure-menu-open
    = link_to t('.home'), store_path, class: 'pure-menu-heading'
    %ul
      %li= link_to t('.articles'), productos_path
      - @tiposproductos = Tipoproducto.all #todo: enviar esto al controlador.
      - @tiposproductos.each do |t|
        %li= link_to t.nombre, productos_path( tipoprod: t.id )
      %li= link_to  t('.news'), novedades_path
      %li= link_to t('.faq'), preguntas_path
      %li= link_to t('.contact'), contacto_path
      #panelControl
        - if session[:user_id]
          %li= link_to t('.orders'), orders_path
          - Estadorden::ESTADOS.each do |estado|
            %li= link_to ' | ' + estado + 's', orders_path(estadoOrden: estado)
          %li= link_to t('.catalog'), products_path
          %li= link_to 'Tipos de productos', tipoproductos_path
          %li= link_to t('.paytypes'), mediopagos_path
          %li= link_to t('.users'), users_path
          %li= button_to t('.exit'), logout_path, method: :delete
        - else
          %li= link_to 'Login', login_path
  = render @cart
