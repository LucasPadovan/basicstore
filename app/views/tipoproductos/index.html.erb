<h1>Listado de tipos de productos</h1>

<table class="table table-bordered table-striped">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
  </tr>

<% @tipoproductos.each do |tipoproducto| %>
  <tr>
    <td><%= tipoproducto.nombre %></td>
    <td><%= tipoproducto.descripcion %></td>
    <td><%= link_to 'Ver', tipoproducto %><br />
    <%= link_to 'Editar', edit_tipoproducto_path(tipoproducto) %><br />
    <%= link_to 'Destruir', tipoproducto, confirm: 'Estas seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo tipo de producto', new_tipoproducto_path %>