<div id="user_list">

<table class="table table-bordered table-striped">
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.date') %></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= user.name %></td>
    <td><%= l user.created_at %>Hs.</td>
    <td>
      <%= link_to t('.show'), user %><br />
      <%= link_to t('.edit'), edit_user_path(user) %><br />
      <%= link_to t('.destroy'), user, :confirm => t('.confirm'), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to t('.new'), new_user_path %>
</div>